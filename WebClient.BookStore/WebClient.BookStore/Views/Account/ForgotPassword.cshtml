@model WebClient.BookStore.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
}
<h3 class="text-center">Forgot Password</h3>
<hr />
<div class="row">
    <div class="col-md-3">
    </div><div class="col-md-6">
        @if (Model?.EmailSent == true)
        {
            <div class="alert alert-info" roler="alert">
                <p>If you have registered with us, <br />We have sent an email on your registered email id!</p>
            </div>
        }
        else
        {
            <form asp-action="ForgotPassword">
                <p>Provide the email id to get the reset password link!</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <a asp-action="Login" asp-controller="Account">Back to Login</a>
    </div>
    <div class="col-md-3"></div>
</div>

