
@model BookModel
<div class="card">
    <a class="img-card" href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
        <img src="@(string.IsNullOrEmpty(Model.CoverPhotoUrl)?"/books/default/noimage.png":Model.CoverPhotoUrl)" style="width:100%">
    </a>
    <div class="card-content">
        <h4 class="card-title">
            <a href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
                @(string.IsNullOrEmpty(Model.Title)?"Title is not available":Model.Title)
            </a>
        </h4>
        <p class="">
            @(string.IsNullOrEmpty(Model.Description)?"Description is not available":Model.Description)
        </p>
    </div>
    <div class="card-read-more">
        <div class="btn btn-link btn-block text-right">@(string.IsNullOrEmpty(Model.Author)? "Author is not available" : Model.Author)</div>
        <div class="align-text-top">
            <a asp-route="bookDetailsRoute" asp-route-id="@Model.Id" asp-fragment="similarbooks" class="btn btn-link btn-block btn-outline-info">
                Read More
            </a>

        </div>
    </div>
</div>